<Page x:Class="HumanResourcesDesktop.Pages.EditPeoplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HumanResourcesDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPeoplePage">

    <StackPanel>
        <TextBlock Text="Личные данные" FontWeight="Bold"/>
        <TextBox x:Name="LastName" Text="{Binding last_name}"/>
        <TextBox x:Name="FirstName" Text="{Binding first_name}"/>
        <TextBox x:Name="Patronymic" Text="{Binding patronymic}"/>
        <TextBox x:Name="Login" Text="{Binding login}"/>
        <PasswordBox x:Name="Password"/>
        <CheckBox x:Name="Sex" Content="Женский" IsChecked="{Binding sex}" Checked="Sex_Checked" Unchecked="Sex_Unchecked"/>
        <CheckBox x:Name="Military" IsChecked="{Binding millitary_duty}" Content="Невоенообязан" Checked="Military_Checked" Unchecked="Military_Unchecked"/>
        <ComboBox x:Name="Role" DisplayMemberPath="name" SelectedValuePath="id" SelectedValue="{Binding role_id}"/>
        <Button Content="Сохранить" Click="Button_Click"/>
    </StackPanel>
</Page>
