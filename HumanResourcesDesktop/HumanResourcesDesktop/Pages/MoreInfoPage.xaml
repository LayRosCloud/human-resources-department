<Page x:Class="HumanResourcesDesktop.Pages.MoreInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HumanResourcesDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MoreInfoPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Text="Фамилия: "/>
        <TextBlock Grid.Row="1" Text="Имя: "/>
        <TextBlock Grid.Row="2" Text="Отчество: "/>
        <TextBlock Grid.Row="3" Text="Логин: "/>
        <TextBlock Grid.Row="4" Text="Паспорт: "/>
        <TextBlock Grid.Row="5" Text="Адрес: "/>
        <TextBlock Grid.Row="6" Text="Телефоны: "/>

        <TextBlock x:Name="LastName" Grid.Column="1" Grid.Row="0"/>
        <TextBlock x:Name="FirstName" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="Patronymic" Grid.Column="1" Grid.Row="2"/>
        <TextBlock x:Name="Login" Grid.Column="1" Grid.Row="3"/>
        <TextBlock x:Name="Passport" Grid.Column="1" Grid.Row="4"/>
        <TextBlock x:Name="Address" Grid.Column="1" Grid.Row="5"/>
        <TextBlock x:Name="Phones" Grid.Column="1" Grid.Row="6"/>
    </Grid>
</Page>
