<Page x:Class="HumanResourcesDesktop.Pages.HubPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HumanResourcesDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HubPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Личная статистика" Click="Button_Click"/>
            <Button Content="Статистика" Click="Button_Click_1"/>
            <Button Content="Сотрудники" Click="Button_Click_2"/>
        </StackPanel>

        <Button VerticalAlignment="Bottom" Content="Выйти" Click="Button_Click_3"/>

        <Frame x:Name="FrmHub" Grid.Column="1"/>
    </Grid>
</Page>
