<Page x:Class="HumanResourcesDesktop.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HumanResourcesDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="FIO"/>
            <TextBlock x:Name="CountWorkingNumbers"/>
        </StackPanel>
        <DataGrid x:Name="grid" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding employee_id}"/>
                <DataGridTextColumn Header="Дата начала" Binding="{Binding date_start}"/>
                <DataGridTextColumn Header="Дата конца" Binding="{Binding date_end}"/>
                <DataGridTextColumn Header="Тип работы" Binding="{Binding type_of_session_id}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
