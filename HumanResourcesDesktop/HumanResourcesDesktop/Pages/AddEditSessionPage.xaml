<Page x:Class="HumanResourcesDesktop.Pages.AddEditSessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HumanResourcesDesktop.Pages"
      mc:Ignorable="d" 
      Background="#E4E5EA"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditSessionPage">
    <StackPanel Orientation="Vertical" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Работник:" Style="{StaticResource TextBlock}"/>
        <ComboBox x:Name="CbEmployee" DisplayMemberPath="last_name" SelectedValuePath="id" SelectedValue="{Binding employee_id}"/>
        <TextBlock Text="Дата начала:" Style="{StaticResource TextBlock}"/>
        <DatePicker SelectedDate="{Binding date_start}"/>
        <TextBlock Text="Дата окончания:" Style="{StaticResource TextBlock}"/>
        <DatePicker SelectedDate="{Binding date_end}"/>
        <TextBlock Text="Тип сессии:" Style="{StaticResource TextBlock}"/>
        <ComboBox x:Name="CbTypes" DisplayMemberPath="name" SelectedValuePath="id" SelectedValue="{Binding type_of_session_id}"/>
        <Button Click="Button_Click" Content="Сохранить" Style="{StaticResource Button}" Margin=" 0 20" Width="188" Height="32"/>
    </StackPanel>
</Page>
